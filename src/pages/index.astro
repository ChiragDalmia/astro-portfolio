---
import { Image } from "astro:assets";
import { Icon } from "astro-icon";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Chirag Dalmia - Developer Portfolio</title>
  </head>
  <body>
    <div class="container mx-auto p-4">
      <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-4">
        {/* Header */}
        <div class="col-span-full bg-white border rounded-lg shadow-sm p-4">
          <div class="flex flex-col sm:flex-row items-center justify-between">
            <h1 class="text-2xl font-bold mb-2 sm:mb-0">Chirag Dalmia</h1>
            <nav class="flex flex-wrap justify-center sm:justify-end space-x-2">
              <button class="px-3 py-1 text-sm border rounded hover:bg-gray-100"
                >About</button
              >
              <button class="px-3 py-1 text-sm border rounded hover:bg-gray-100"
                >Works</button
              >
              <button class="px-3 py-1 text-sm border rounded hover:bg-gray-100"
                >Blogs</button
              >
              <button class="px-3 py-1 text-sm border rounded hover:bg-gray-100"
                >Contact</button
              >
              <button
                class="px-3 py-1 text-sm bg-blue-500 text-white rounded hover:bg-blue-600"
                >V1 Site</button
              >
            </nav>
          </div>
        </div>

        {/* Hero */}
        <div
          class="md:col-span-2 lg:col-span-2 row-span-2 bg-white border rounded-lg shadow-sm p-4"
        >
          <h2 class="text-4xl font-bold mb-2">Chirag Dalmia</h2>
          <p class="text-xl text-gray-600 mb-4">Front-End Guy</p>
          <Image
            src="/placeholder.svg?height=300&width=300"
            alt="Chirag Dalmia"
            width={300}
            height={300}
            class="mx-auto rounded-full"
          />
        </div>

        {/* About */}
        <div
          class="md:col-span-1 lg:col-span-2 bg-white border rounded-lg shadow-sm p-4"
        >
          <h2 class="text-2xl font-bold mb-2">About Me</h2>
          <p>
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam in
            dui mauris.
          </p>
        </div>

        {/* Works */}
        <div
          class="md:col-span-1 lg:col-span-2 row-span-2 bg-white border rounded-lg shadow-sm p-4"
        >
          <h2 class="text-2xl font-bold mb-4">My Works</h2>
          <div class="grid grid-cols-2 gap-2">
            <div class="bg-gray-100 p-2 rounded">Work 1</div>
            <div class="bg-gray-100 p-2 rounded">Work 2</div>
            <div class="bg-gray-100 p-2 rounded">Work 3</div>
            <div class="bg-gray-100 p-2 rounded">Work 4</div>
          </div>
        </div>

        {/* Blogs */}
        <div
          class="md:col-span-1 lg:col-span-2 bg-white border rounded-lg shadow-sm p-4"
        >
          <h2 class="text-2xl font-bold mb-4">Latest Blogs</h2>
          <div class="space-y-2">
            <div class="bg-gray-100 p-2 rounded">Blog Post 1</div>
            <div class="bg-gray-100 p-2 rounded">Blog Post 2</div>
          </div>
        </div>

        {/* Graph */}
        <div
          class="md:col-span-2 lg:col-span-2 bg-white border rounded-lg shadow-sm p-4"
        >
          <h2 class="text-2xl font-bold mb-4">Contribution Graph</h2>
          <div class="bg-gray-100 p-4 rounded h-32">
            Placeholder for GitHub-style contribution graph
          </div>
        </div>

        {/* Streak */}
        <div class="bg-white border rounded-lg shadow-sm p-4">
          <h2 class="text-2xl font-bold mb-4">GitHub Streak</h2>
          <div class="bg-gray-100 p-4 rounded h-24">
            Placeholder for GitHub streak information
          </div>
        </div>

        {/* Spline3D */}
        <div
          class="md:col-span-2 lg:col-span-2 row-span-2 bg-white border rounded-lg shadow-sm p-4"
        >
          <h2 class="text-2xl font-bold mb-4">3D Showcase</h2>
          <div class="bg-gray-100 p-4 rounded h-64">
            Placeholder for Spline 3D content
          </div>
        </div>

        {/* Contact */}
        <div
          class="md:col-span-1 lg:col-span-2 bg-white border rounded-lg shadow-sm p-4"
        >
          <h2 class="text-2xl font-bold mb-4">Contact Me</h2>
          <form class="space-y-2">
            <input
              type="text"
              placeholder="Name"
              class="w-full px-3 py-2 border rounded"
            />
            <input
              type="email"
              placeholder="Email"
              class="w-full px-3 py-2 border rounded"
            />
            <textarea
              placeholder="Message"
              class="w-full px-3 py-2 border rounded"
              rows="4"></textarea>
            <button
              type="submit"
              class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600"
              >Send Message</button
            >
          </form>
        </div>

        {/* Highlighted Work */}
        <div
          class="md:col-span-2 lg:col-span-2 bg-white border rounded-lg shadow-sm p-4"
        >
          <h2 class="text-2xl font-bold mb-4">Highlighted Work</h2>
          <h3 class="text-lg font-semibold mb-2">Featured Project</h3>
          <p class="mb-2">Description of the highlighted work goes here.</p>
          <button class="px-4 py-2 border rounded hover:bg-gray-100"
            >View Project</button
          >
        </div>

        {/* Footer */}
        <div class="col-span-full bg-white border rounded-lg shadow-sm p-4">
          <div
            class="flex flex-col sm:flex-row justify-between items-center py-4 space-y-4 sm:space-y-0"
          >
            <div class="flex space-x-4">
              <button class="p-2 hover:bg-gray-100 rounded-full">
                <Icon name="mdi:twitter" class="h-5 w-5" />
                <span class="sr-only">Twitter</span>
              </button>
              <button class="p-2 hover:bg-gray-100 rounded-full">
                <Icon name="mdi:github" class="h-5 w-5" />
                <span class="sr-only">GitHub</span>
              </button>
              <button class="p-2 hover:bg-gray-100 rounded-full">
                <Icon name="mdi:linkedin" class="h-5 w-5" />
                <span class="sr-only">LinkedIn</span>
              </button>
            </div>
            <div class="w-32 h-16 bg-gray-100 rounded">
              {/* Placeholder for Rive animation */}
            </div>
            <div>Visits: 1234</div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
